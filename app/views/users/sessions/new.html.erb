<body>
<div class = "limiter">
<%= stylesheet_link_tag "sign_in", :media => "all" %>

<div class="container-login100" width="100%">

  <div class ="wrap-login100" width="100px">
  <div class="form-signin">
    <div class="logo-item">
      <img class="mb-4" src="/llogo.png" alt="" width="72" height="72">
    </div>

    <span class ="login-title font-weight-bold p-b-34 p-t-27"> ACCOUNT LOGIN </span>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class ="container p-3">
        <div class="form-group row">
          <span style="font-size: 25px; color: Dodgerblue;">
            <i class="fa fa-envelope" aria-hidden="true"></i>
          </span>
          <div class ="col-sm-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email",
            :style=> "border-radius: 25px; width: 100%; background: #e6e6e6;line-height: 1.5; padding: 0 30px 0 68px;height: 50px;" %>

        </div>
          </div>
        <div class="form-group row">
          <span style="font-size: 35px; color: Dodgerblue;">
            <i class="fa fa-lock" aria-hidden="true"></i>
          </span>
          <div class ="col-sm-10 ">
            <%= f.password_field :password, autocomplete: "current-password",placeholder: "Password",
            :style=> "border-radius: 25px; width: 100%; background: #e6e6e6;line-height: 1.5;padding: 0 30px 0 68px;height: 50px;" %>
      </div>
            </div>

            <% if devise_mapping.rememberable? %>
            <div class="checkbox100">
              <%= f.check_box :remember_me%>
              <%= f.label :Remember_Me, :style=>"color: #fff; font-size: 20px;
              line-height:1.2; position: relative; padding-left:26px; cursor:pointer" %>
            </div>
            <% end %>




    <div class="actions">
      <%= f.submit "Log in", class:'btn btn-primary btn-lg',:style => "width: 90%;
      border-color: #f90e67; margin:20px auto; text-align:center; cursor:pointer;
      background-color:	#f90e67; border-radius:24px;" %>
    </div>
    </div>
    <% end %>

    <div class="field p-3">
    <%= render "users/shared/links" %>
      </div>
  </div>
  </div>
</div>
</body>
