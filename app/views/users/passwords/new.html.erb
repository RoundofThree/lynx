<div class="image-container  set-full-height" style = " display: flex; align-items: center;justify-content: center;
background-image: url('/bank5.jpg');background-position: center center;background-size: cover;">

<!-- Main container for sign in -->
<div class = "container p-3" style = "width: 650px; height:900px">
<div class = 'row' >
  <div class="col-8 p-3"style="margin-left: 16.66666667%;">

    <div class = "container" style = "padding-top: 100px;">
  <div class ="box p-3" width="120px" style=" border-radius:20px;border: 2px;  background-color: #FFFFFF;">

  <div class="form-signin">
    <div class="logo-item" style = " display: flex; align-items: center;justify-content: center;">
      <img class="mt-3" src="/passphrase.png" alt="" width="90" height="90">
    </div>

    <h2 class=" p-3" style="color: #525252;margin-bottom: 10px;">Forgot your password?</h2>
    <hr>
    <div class = "row " style=" display: flex; align-items: center;justify-content: center;">
      <p class = "lead" style="font-size:16px;">We will help you.</p>
  </div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="row "style=" display: flex; align-items: center;justify-content: center;">
    <%= f.label :your_email_address %>
    <br >
    <%= f.email_field :email, autofocus: true, autocomplete: "email",style: "width:80%;margin-bottom: 20px;"%>
    <br>
    <%= f.submit "Email me a recovery link",class: "btn-outline-info", style: "border-radius:25px;"  %>

  </div>
<% end %>
