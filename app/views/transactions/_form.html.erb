<%= form_with(scope: :transaction, url: transactions_path(transaction), method: :post, local: true) do |form| %>
    <!-- Errors -->
      <% if transaction.errors.any? %>
        <div class="alert alert-danger">
          <div class="message-header">
            <p><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</p>
          </div>
          <div class="message-body">
            <ul>
              <% transaction.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="form-group row">
        <%= form.label :payer_account_id, class: "col-form-label" %>
        <%= form.select :payer_account_id, options_for_select(@accounts.map{ |c| ["#{c.account_number} - #{c.currency}#{c.balance}", c.id] }), {}, { class: "custom-select d-block w-100" } %>
      </div>

      <hr class="mb-4">

      <div class="form-group row">
        <%= form.label :amount, class: "col-form-label" %>
        <%= form.number_field :amount, class: "form-control" %>
      </div>

      <div class="form-group row">
        <%= form.label :payee_account_number, class: "col-form-label" %>
        <%= form.text_field :payee_account_number, class: "form-control" %>
      </div>

      <div class="form-group row">
        <%= form.label :payee_fullname, class: "col-form-label" %>
        <%= form.text_field :payee_fullname, class: "form-control" %>
      </div>

      <div class="form-group row">
        <%= form.submit class: "btn btn-primary btn-lg btn-block" %>
      </div>
  
<% end %>
