<div class="row justify-content-center">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Transaction to <%= @transaction.dealer_name %></h4>
            </div>
            <hr class="md-4" />
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Account no.: <%= @transaction.account.account_number %></li>
                <li class="list-group-item">Dealer Account no.: <%= @transaction.dealer_account_number %></li>
                <li class="list-group-item">Amount: <%= number_to_currency(@transaction.amount, :unit => @transaction.currency, :format => "%u %n") %></li>
                <li class="list-group-item">Reference: <%= @transaction.reference %></li>
            </ul>
            <div class="card-body">
                <%= link_to "Back to account", account_path(@transaction.account), class: "card-link" %>
            </div>
        </div>
    </div>
</div>