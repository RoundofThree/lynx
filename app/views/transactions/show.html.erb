<div class="card">
    <div class="card-body">
        <h4 class="card-title"><%= @transaction.payee_fullname %></h4>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">To: <%= @transaction.payee_account_number %></li>
        <li class="list-group-item">Amount: <%= @transaction.amount %></li>
        <li class="list-group-item">Reference: <%= @transaction.reference %></li>
    </ul>
    <div class="card-body">
        <%= link_to "Back to account", accounts_path(@transaction.payer_account), class: "card-link" %>
    </div>
</div>