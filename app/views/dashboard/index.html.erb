
  <div class="row">
    <%= render partial: "dashboard/navbar" %>


    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <h2 style="color:blue">Personal Summary</h2>
      <hr align=left width=400 SIZE=1>
        <div class="card mb" style="width: 35rem;">
            <div class="card-header">
              Personal Summary for <span style="font-weight:bold"><%= current_user.lastname + " " + current_user.firstname %></span>
            </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><span> EMAIL: </span>  <span style="float:right;font-weight:bold"><%= current_user.email %></span></li>
            <li class="list-group-item"><span> PHONE: </span><span style="float:right;font-weight:bold"><%= current_user.phone %></span></li>
            <li class="list-group-item"><span> BIRTH DATE: </span><span style="float:right;font-weight:bold"><%= (current_user.birth_date).strftime("%d/%m/%Y") %></span></li>
            <li class="list-group-item"><span> ACCOUNT NUMBER: </span><span style="float:right;font-weight:bold"><%= @accounts.length %></span></li>
            <li class="list-group-item"><span> TOTAL BALANCE: </span><span style="float:right;font-weight:bold"><%="€ " + total_balance_EUR.to_s + " + £ " + total_balance_GBP.to_s + " + $ " + total_balance_USD.to_s %></span></li>
          </ul>
        </div>

        <div class="list-group" style="width: 25rem; position:absolute; right:50px; top: 70px;">
          <a class="list-group-item list-group-item-action active">
            <span style="font-size:20px">Action List</span>
          </a>
          <a>
            <%= link_to new_transaction_path, class: "list-group-item list-group-item-action" do %>
            <span style="font-size:20px">Make a Transfer</span>
            <%end%>
          </a>
          <a class="list-group-item list-group-item-action"><span style="font-size:20px">Invest</span></a>
          <a class="list-group-item list-group-item-action"><span style="font-size:20px">Help</span></a>
          <a class="list-group-item list-group-item-action"><span style="font-size:20px">Contact us</span></a>

        </div>

        <div style=" margin-top:50px">
          <h3 style="color: dark">Account List </h3>
              <table class ="table table-striped"  summary="Accounts list">
                <tr class ="header">
                  <th>AccountID</th>
                  <th>Balance</th>
                  <th>Action</th>
                </tr>
                  <%= render partial: "user_list", collection: @accounts, as: :account %>
              </table>
          </div>





    </main>
  </div>
