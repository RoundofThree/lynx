<div class="dashboard index">

   <h2>Personal dashboard</h2>

   <% total_balance = 0 %>
   <% account_number = 0 %>

   <% @accounts.each do |account| %>
   <% account_number +=1 %>

   <% total_balance += account.balance %>
   <% end %>

   <div class="">
     <h3>Summary</h3>
     <p>Personal summary by <%=current_user.firstname + " " + current_user.lastname %></p>
     <p>Accounts number is : <%= account_number%></p>
     <p>Total balance is : <%=total_balance%></p>
   </div>

   <div class="">
     <h3>Inbox</h3>


   </div>

   <%= button_to "go to payment", new_transaction_path, :method => :get %>





   <p class = "text-info">total balance is
   <%= total_balance %>
   <!-- todo -->
   </p>

   <table class ="table"  summary="Accounts list">
     <tr class ="header">
       <th>AccountID</th>
       <th>User</th>
       <th>Balance</th>
       <th>Action</th>
     </tr>
     <% @accounts.each do |account| %>
     <tr>
       <td><%= account.account_number %></td>
       <td><%= account.user.firstname %></td>
       <td><%= account.currency + ":" + account.balance.to_s %></td>
       <td class="user">
         <%= link_to "View details", account_path(account), class: "link" %>
       </td>
     </tr>
     <% end %>
   </table>
</div>
