<html lang="en">

    <head>
        <meta charset="utf-8">
    </head>

    <body>
        <div class="container">
            <h1>
                <p>Account <%= @account.account_number %></p>
            </h1>
            <div id="account-info">
                <h2>Account information</h2>
                <hr class="transaction-divider">
                <h6 class="balance"> Current Balance </h6>
                <br />
                <h4><%= @account.balance %> <%= @account.currency %></h4>
                <hr class="transaction-divider">
            </div>

            <div id="transacion-history">
                <h3>Transactios</h3>
                <table class="transactions">
                    <colgroup>
                        <col span="1" style="width: 20%;">
                        <col span="1" style="width: 50%;">
                        <col span="1" style="width: 15%;">
                        <col span="1" style="width: 15%;">
                    </colgroup>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Balance</th>
                    </tr>
                    <% @transactions.each do |transaction| %>
                    <%= link_to transaction_path(transaction), class: "link" do %>
                    <tr class="transaction-row" href="">
                        <td>
                            <!-- Time format: yyyy-mm-dd hh:mm:ss -->
                            <!-- Maybe consider removing year-->
                            <%= transaction.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                        <td>Transferred to <%= transaction.payee_fullname %></td>
                        <td><%= transaction.amount %></td>
                        <td><%= @account.balance %></td>
                    </tr>
                    <% end %>
                    <% end %>
                </table>

            </div>
        </div>
    </body>

</html>