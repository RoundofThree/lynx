<div id="account-info">
    <div>
        <p>Account number: <%= @account.account_number %></p>
    </div>
    <div>
        <p> Balance: <%= @account.balance %> <%= @account.currency %></p>
    </div>
</div>

<div id="transacion-history">
    <h1>Transaction History</h1>
    </br>
    <div>
        This account has <%= @transactions.length %> transactions.
    </div>
    <div>
        <!-- TODO: Add if statements -->
        <% @transactions.each do |transaction| %>
        <%= transaction.payee_fullname %></br>
        <%= transaction.payee_account_number %></br>
        <%= transaction.amount %>
        <%= transaction.currency %> </br>
        <%= transaction.reference %>
        <%= link_to "View details", transaction_path(transaction), class: "link" %><br />
        <% end %>
    </div>
    <p>TODO: The transactions should bring the users to the page of the corresponding transaction.</p>
</div>