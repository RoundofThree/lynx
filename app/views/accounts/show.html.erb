   <div class="account-show">
      <div class="row">
       <div class = "col p-4" style="align-items-center">
       <h1><p>Account Number <%= @account.account_number %></p>  </h1>
       <div class="btn-group" role="group" style="margin-bottom:20px">
         <button type="button" class="btn btn-secondary active" style="margin-right:20px">Details</button>
         <button type="button" class="btn btn-secondary" style="margin-right:20px">Transfer</button>
         <button type="button" class="btn btn-secondary" style="margin-right:20px">Documents</button>
       </div>
             <div>
                 <h4 class="account-info">Account information</h4>
                 <hr class="divider">
                 <h4> Current Balance </h4>
                 <h5 class="balance">
                   <%= @account.balance %> <%= @account.currency %> available balance
                 </h5>
                 <hr class="divider">
             </div>
             <div id="transacion-history">
                 <h4>Transactions</h4>
                 <!--TODO: The background colour of the th and tr elements should be editable
                 ideally the even rows in the table should have different colours as odd rows-->
                 <table class="transactions">
                     <colgroup>
                         <col span="1" style="width: 20%;">
                         <col span="1" style="width: 30%;">
                         <col span="1" style="width: 15%;">
                         <col span="1" style="width: 15%;">
                         <col span="1" style="width: 15%;">
                     </colgroup>
                     <tr>
                         <th>Date</th>
                         <th>Description</th>
                         <th>Amount</th>
                         <th>Currency</th>
                         <th>Detail</th>
                     </tr>
                     <% count = 1 %>
                     <% @transactions.each do |transaction| %>
                     <% count = count + 1 %>
                     <tr class="transaction-row" style="background-color:<%= account_table_color count %>">
                         <td>
                             <!-- Time format: yyyy-mm-dd hh:mm:ss -->
                             <!-- Maybe consider removing year-->
                             <%= transaction.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                         <td>Transferred to <%= transaction.dealer_name %></td>
                         <td><%= transaction.amount %></td>
                         <td><%= transaction.currency %></td>
                         <td><%= link_to "View", transaction_path(transaction), class: "link"%></td>
                     </tr>
                     <% end %>
                 </table>

             </div>
         </div>
   </div>
