<%= form_for [:admin, dealer], class: "col-7" do |form| %>
  <!-- Error -->
  <% if dealer.errors.any? %>
    <div class="message is-danger">
      <div class="message-header">
        <p><%= pluralize(dealer.errors.count, "error") %> prohibited this dealer from being saved:</p>
      </div>
      <div class="message-body">
        <ul>
          <% dealer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!-- form body -->
  <div class = "card" style= "border-radius: 10px;">
    <div class = "card" style ="padding: 57px 80px; padding-b ottom: 20px;">
      <!-- currency and name -->
      <div class = "row" style="margin-bottom: 22px;" >
        <div class = "col">
          <%= form.label :currency, class: "label" %>
          <%= form.text_field :currency, class: "input", style: "line-height: 50px; border-radius: 5px; padding: 0 20px;" %>
        </div>
        <div class = "col">
          <%= form.label :name, class: "label" %>
          <%= form.text_field :name, class: "input", style: "line-height: 50px; border-radius: 5px; padding: 0 20px;" %>
        </div>
      </div>

      <!-- min & max amounts --> 
      <div class = "row" style="margin-bottom: 22px;">
        <div class = "col">
          <%= form.label :min_amount, "Minimum Transaction amount", class: "label" %>
          <%= form.number_field :min_amount, class: "input", style:"line-height: 50px; border-radius: 5px; padding: 0 20px;" %>
        </div>
        <div class = "col">
          <%= form.label :max_amount, "Maximum Transaction amount", class: "label" %>
          <%= form.number_field :max_amount, class: "input", style:"line-height: 50px; border-radius: 5px; padding: 0 20px;" %>
        </div>
      </div>

      <!-- account number & is_vendor -->
      <div class = "row" style="margin-bottom: 22px;">
        <div class ="col">
          <%= form.label :account_number, "Account number", class: "label" %>
          <%= form.text_field :account_number, class: "input", style: "line-height: 50px; border-radius: 5px; padding: 0 20px;" %>
        </div>
        <div class = "col">
          <%= form.label :is_vendor, "This dealer is a vendor (instead of an individual)", class: "label" %>
          <%= form.check_box :is_vendor, class: "input", style: "line-height: 50px; border-radius: 5px; padding: 0 20px;" %>
        </div>
      </div>

      <!-- relative frequency -->
      <div class = "row" style="margin-bottom: 40px;">
        <div class = "col">
          <%= form.label :frequency, "Relative frequency (how many times would a normal person deal with this dealer in 100 days)", class: "label" %>
          <%= form.number_field :frequency, class: "input", style:"line-height: 50px; border-radius: 5px; padding: 0 20px;" %>
        </div>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "button btn-outline-primary" %>
  </div>
<% end %>
