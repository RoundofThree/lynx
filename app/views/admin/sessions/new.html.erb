<div class="image-container set-full-height" style = "background-image: url('/bank3.jpg'); height: 804px;background-position: center center;
background-size: cover;">
  <!-- Main container for sign in -->
  <div class = "container p-3" style = "width: 1170px;">
  <div class = 'row' >
    <div class="col-8 p-3"style="margin-left: 16.66666667%;">

      <div class = "container" style = "padding-top: 100px;">
        <div class = "container"style="min-height: 410px;border-radius: 10px;padding: 10px 0;width: 650px;
  background-color: #FFFFFF; justify-content:center;box-shadow: 0 0 15px rgba(0, 0, 0, 0.15), 0 0 1px 1px rgba(0, 0, 0, 0.1);">

      <div class = "header" style="justify-content:center;">
        <div class="logo-item" style = " display: flex; align-items: center;justify-content: center;">
          <img class="mt-3" src="/passphrase.png" alt="" width="90" height="90">
        </div>
        <p class =" font-weight-bold mt-1 p-4" style ="font-size:30px;text-align: center;color:#01045d;">Authentication Required<p>
          <hr>
          <p class =" mt-1 " style ="font-size:16px;text-align: center;">Please enter your admin passphrase to access the Admin Area</p>
      <div class ="container" style = " display: flex; align-items: center;justify-content: center;">
        <div class=" row p-2">
          <%= form_with url: admin_login_path, method: :post do |f| %>
            <div class = "row">
              <span class = "p-3">
                <%= f.password_field :admin_passphrase, :style=> "border-radius: 25px; width: 100%; ;line-height: 2.0;
           padding: 10px 20px 0 20px;height: 30px;"%>
              </span>
            </div>
            <div class = "row ">
              <div class = "col-2"> </div>
              <div class = "col-8">
                <br>
                <%= f.submit "Login", class: "btn btn-lg btn-outline-info",style: "width: 100%; border-radius:24px;" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  </div>
</div>
</div>
