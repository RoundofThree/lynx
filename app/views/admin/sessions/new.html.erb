<div class="container p-5" style = " display: flex; align-items: center;justify-content: center;">
  <!-- Main container for sign in -->
  <div class ="box" width="4000px" style=" border-radius:20px;border: 2px solid #01045d;">
    <div class="form-signin">
      <div class="logo-item" style = " display: flex; align-items: center;justify-content: center;">
        <img class="mt-3" src="/llogo.png" alt="" width="90" height="90">
      </div>
      <p class =" font-weight-bold mt-1 p-3" style ="font-size:30px;text-align: center;color:#01045d;">Admin Passphrase </p>
      <div class ="container p-4">
        <div class=" row p-2">
          <%= form_with url: admin_login_path, method: :post do |f| %>
            <div class = "row">
              <span class = "p-3"style="font-size: 20px;">
                <i class="fa fa-lock  fa-xs"></i>
                <%= f.password_field :admin_passphrase, :style=> "border-radius: 25px; width: 80%; ;line-height: 2.0;
           padding: 10px 30px 0 20px;height: 30px;"%>
              </span>
            </div>
            <div class = "row ">
              <div class = "col-3"> </div>
              <div class = "col-9">
                <%= f.submit "Login as admin", class: "btn btn-outline-info",style: "width: 50%; border-radius:24px;" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
