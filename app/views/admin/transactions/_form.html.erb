<%= form_for [:admin, transaction], class: "col-8" do |form| %>
  <!-- Errors -->
  <% if transaction.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% transaction.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row ">
    <%= form.label :account_Number, class: "col-sm-4 col-form-label", style:"font-size:18px;" %>
    <div class="col-sm-6">
      <%= form.collection_select :account_id, Account.all, :id, :account_number,:prompt => true %>
    </div>
  </div>
  <div class="form-group row ">
    <%= form.label :amount, class: "col-sm-4 col-form-label", style:"font-size:18px;" %>
    <div class="col-sm-6">
      <%= form.text_field :amount, autofocus: true, class: "form-control",style:"border: 0;border-bottom: 1px dotted #111111;" %>
    </div>
  </div>

  <div class="form-group row ">
    <%= form.label :dealer_account_number, class: "col-sm-4 col-form-label", style:"font-size:18px;" %>
    <div class="col-sm-6">
      <%= form.text_field :dealer_account_number, class: "form-control" ,style:"border: 0;border-bottom: 1px dotted #111111;"%>
    </div>
  </div>
  <div class="form-group row ">
    <%= form.label :dealer_name, class: "col-sm-4 col-form-label" , style:"font-size:18px;"%>
    <div class="col-sm-6">
      <%= form.text_field :dealer_name, class: "form-control",style:"border: 0;border-bottom: 1px dotted #111111;" %>
    </div>
  </div>
  <div class="form-group row ">
    <%= form.label :reference, class: "col-sm-4 col-form-label" , style:"font-size:18px;"%>
    <div class="col-sm-6">
      <%= form.text_field :reference, class: "form-control" ,style:"border: 0;border-bottom: 1px dotted #111111;"%>
    </div>
  </div>
  <div class="form-group row ">
    <%= form.label :created_at, class: "col-sm-4 col-form-label" , style:"font-size:18px;"%>
    <div class="col-sm-6">
      <%= form.date_select :created_at, {minute_step: 60}, class: "form-control",style:"border: 0;border-bottom: 1px dotted #111111;" %>
      <br>
      <%= form.time_select :created_at, {ignore_date: true}, {class: "col-md-4"} %>
    </div>
  </div>

  <div class="form-group row " style="padding-left:40px; padding-top:20px;">

  <div class="actions">
    <%= form.submit class: "btn-lg btn-primary",style:"background-color:#075aaa;"%>
  </div>
</div>

<% end %>
