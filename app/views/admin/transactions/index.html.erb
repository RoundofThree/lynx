<div class="row">
  <%= render partial: "admin/shared/navbar" %>

  <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <!-- Header -->
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
      <h1 class="h2">Transactions</h1>

      <div class="btn-toolbar row mb-2 mb-md-0" style="width: 60%; position: relative; left: 30px;">
        <!-- Search/sort functionality -->
        <%= form_with url: admin_transactions_path, method: :get, local: true, class: "row mt-md-0 container-fluid" do |f| %>
        <%= f.text_field :search, placeholder: "Filter by dealer...", class: "form-control mr-1 col-xs-6 col-md-4" %>
        <%= f.select :sort_by, options_for_select([["Most negative amount", "amount"], ["Last created", "last_created_at"], ["First created", "first_created_at"]]), {}, {class: "form-control col-xs-6 col-md-4" } %>
        <%= f.submit "Filter and sort", class: "btn btn-outline-success ml-1 col-xs-6 col-md-3" %>
        <% end %>
      </div>

      <div class="btn-group mr-2">
          <button type="button" class="btn btn-sm btn-outline-secondary">Export as XLS</button>
      </div>
    </div>

    <%= render "admin/transactions/list", {transactions: @transactions} %>

  </main>

</div>