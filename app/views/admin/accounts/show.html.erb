<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @account.account_number %>:
        <%= @account.user.firstname + @account.user.lastname %>
      </p>

      <div class="panel-block">
        Balance: <%= @account.balance %>
      </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to 'Edit', edit_admin_account_path(@account), class: "button is-gray" %>
        <%= link_to "Delete", admin_account_path(@account), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-gray" %>
      </div>
    </div>
  </div>
</div>
