<%= form_for [:admin, user], class: "col-7" do |form| %>
  <!-- Errors -->
  <% if user.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- form body -->
  <div class = "card" style= "border-radius: 10px;">
    <div class = "card" style ="padding: 57px 80px; padding-bottom: 20px;">
      <!-- name fields -->
      <div class = "row" style="margin-bottom: 22px;" >
        <div class = "col">
          <%= form.label :Fisrt_Name, class: "label" %>
          <%= form.text_field :firstname, class: "input",style:"line-height: 50px;
          border-radius: 5px;padding: 0 20px;" %>
        </div>
        <div class = "col">
          <%= form.label :Last_name, class: "label"%>
          <%= form.text_field :lastname, class: "input",style:"line-height: 50px;
            border-radius: 5px;padding: 0 20px;"%>
        </div>
      </div>
      <!-- birthdate & gender fields -->
      <div class = "row" style="margin-bottom: 22px;">
        <div class ="col">
          <%= form.label :Gender, class: "label" %>
          <br>
          <%= form.select :is_female, User::GENDER_TYPES,style:"border-radius: 5px;" %>
        </div>
        <div class ="col">
          <%= form.label :birth_date, class: "label"%>
          <br>
          <%= form.date_select :birth_date, start_year: 1800, end_year: Time.now.year %>
        </div>
      </div>
      <!-- phone & email fields -->
      <div class = "row" style="margin-bottom: 22px;">
        <div class = "col">
          <%= form.label :phone, class: "label"  %>
          <br>
          <%= form.text_field :phone, class: "input" ,style:"line-height: 50px;
        border-radius: 5px;padding: 0 20px;"%>
        </div>
        <div class = "col">
          <%= form.label :email, class: "label"  %>
          <br>
          <%= form.text_field :email, class: "input",style:"line-height: 50px;
        border-radius: 5px;padding: 0 20px;"%>
        </div>
      </div>
      <!-- password fields -->
      <div class = "row" style="margin-bottom: 40px;">
        <div class = "col">
          <%= form.label :password, class: "label"%>
          <%= form.password_field :password,style:"line-height: 50px;
    border-radius: 5px;padding: 0 20px;" %>
        </div>
        <div class = "col">
          <div class="field">
            <%= form.label :password_confirmation, class: "label"%>
            <%= form.text_field :password_confirmation,style:"line-height: 50px;
    border-radius: 5px;padding: 0 20px;" %>
          </div>
        </div>
      </div>
      <!-- postcode & country fields -->
      <div class = "row" style="margin-bottom: 40px;">
        <div class = "col">
          <%= form.label :postcode, class: "label"%>
          <%= form.text_field :postcode,style:"line-height: 50px;
  border-radius: 5px;padding: 0 20px;" %>
        </div>
        <div class = "col">
          <div class="field">
            <%= form.label :country, class: "label"%>
            <br>
            <%= form.text_field :country,style:"line-height: 50px;
    border-radius: 5px;padding: 0 20px;" %>
          </div>
        </div>
      </div>
      <!-- address info -->
      <div class = "row" style="margin-bottom: 40px;">
        <div class = "col">
          <%= form.label :address_line_1, class: "label"%>
          <%= form.text_field :address_line_1,style:"line-height: 50px;
    border-radius: 5px;padding: 0 20px;" %>
        </div>
        <div class = "col">
          <%= form.label :address_line_2, class: "label"%>
          <%= form.text_field :address_line_2,style:"line-height: 50px;
      border-radius: 5px;padding: 0 20px;" %>
        </div>
      </div>
      <!-- Whether admin or not, cannot change if it's the current user -->
      <div class = "row" style="margin-bottom: 40px;">
        <div class = "col">
          <%= form.label :admin %>
          <%= form.check_box :admin, disabled: user == current_user %>
        </div>
        <div class="col">
          <%= form.label :admin_passphrase %>
          <%= form.password_field :admin_passphrase, style: "line-height: 50px;
        border-radius: 5px;padding: 0 20px;" %>
        </div>
      </div>
      <div class="actions">
        <%= form.submit class: "btn btn-outline-primary"%>
      </div>
    </div>
  </div>
<% end %>
